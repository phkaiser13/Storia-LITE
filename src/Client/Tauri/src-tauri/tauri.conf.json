{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Storia-LITE",
  "version": "0.1.0",
  "identifier": "com.your-domain.storia-lite",
  "build": {
    "beforeBuildCommand": "cd ../../../WebClient && npm install && npm run build",
    "beforeDevCommand": "cd ../../../WebClient && npm install && npm run dev",
    "devUrl": "http://localhost:5173",
    "distDir": "../../../WebClient/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Storia-LITE",
        "width": 1200,
        "height": 800,
        "minWidth": 940,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "allowlist": {
        "all": false,
        "fs": {
          "scope": [ "$APPDATA/*", "$DESKTOP/*" ],
          "all": true
        },
        "path": {
          "all": true
        },
        "shell": {
          "open": true
        },
        "dialog": {
          "all": true
        },
        "http": {
          "all": true,
          "scope": [
            "http://localhost:5200/*",
            "https://localhost:7200/*",
            "https://your-production-api-url.com/api/*"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Your Company or Name",
    "copyright": "Copyright Â© 2025 TruveSoftware, a division of Vytruve Organization. All rights reserved.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../Resources"
    ]
  }
}
