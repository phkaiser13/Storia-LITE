{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Storia Lite",
  "version": "0.1.0",
  "identifier": "com.truvesoftware.storia-lite",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Storia Lite ",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../Resources/AppIcon/appicon.ico"
    ],
    "resources": [
      "../Resources"
    ]
  }
}
